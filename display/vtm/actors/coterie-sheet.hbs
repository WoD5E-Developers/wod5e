<div class="flexrow coterie-features grid-2col">
    <div class="flex-group-center chasse">
        <div class="flexrow field-header">
            <label for="system.chasse.value" class="resource-label">{{localize "WOD5E.VTM.Chasse"}}</label>
        </div>
        <div class="resource resource-content flexrow flex-center flex-between">
            <div class="resource-value" data-value="{{chasse.value}}" data-name="system.chasse.value">
                <span class="resource-value-empty"></span>
                {{#numLoop 5}}
                <span class="resource-value-step" data-action="dotCounterChange" data-index="{{this}}"></span>
                {{/numLoop}}
            </div>
        </div>
    </div>
    <div class="flex-group-center lien">
        <div class="flexrow field-header">
            <label for="system.lien.value" class="resource-label">{{localize "WOD5E.VTM.Lien"}}</label>
        </div>
        <div class="resource resource-content flexrow flex-center flex-between">
            <div class="resource-value" data-value="{{lien.value}}" data-name="system.lien.value">
                <span class="resource-value-empty" data-action="dotCounterEmpty"></span>
                {{#numLoop 5}}
                <span class="resource-value-step" data-action="dotCounterChange" data-index="{{this}}"></span>
                {{/numLoop}}
            </div>
        </div>
    </div>
    {{#ifgr chasse.value 0}}
        <div class="flex-group-center hunting-difficulty">
            <div class="flexrow field-header">
                <label class="resource-label">{{localize "WOD5E.VTM.HuntingDifficulty"}}</label>
            </div>
            <div class="resource resource-content flexrow flex-center flex-between">
                <div class="resource-value">
                    {{huntingDifficulty}}
                </div>
            </div>
        </div>
    {{/ifgr}}
    <div class="flex-group-center portillon">
        <div class="flexrow field-header">
            <label for="system.portillon.value" class="resource-label">{{localize "WOD5E.VTM.Portillon"}}</label>
        </div>
        <div class="resource resource-content flexrow flex-center flex-between">
            <div class="resource-value" data-value="{{portillon.value}}" data-name="system.portillon.value">
                <span class="resource-value-empty" data-action="dotCounterEmpty"></span>
                {{#numLoop 5}}
                <span class="resource-value-step" data-action="dotCounterChange" data-index="{{this}}"></span>
                {{/numLoop}}
            </div>
        </div>
    </div>
</div>
