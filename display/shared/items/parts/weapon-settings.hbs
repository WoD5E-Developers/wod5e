<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
    <!-- Select the type this weapon belongs to -->
    <div class="flex-group-center flexrow">
        <div class="field-header flexrow">
            {{localize "WOD5E.EquipmentList.WeaponType"}}
        </div>
        <div>
            <select name="system.weaponType" data-type="String">
                {{selectOptions weaponTypeOptions selected=weaponTypeSelected localize=true}}
            </select>
        </div>
    </div>

    {{> "systems/wod5e/display/shared/items/parts/item-uses.hbs"}}

    {{> "systems/wod5e/display/shared/items/parts/data-item-id.hbs"}}

    {{> "systems/wod5e/display/shared/items/parts/source.hbs"}}
</section>
