<div class="dice-group-header flex-group-center">
  {{#unless disableBasicDice}}
    <label>{{localize 'WOD5E.HTR.HunterDice' }}</label>
  {{/unless}}
  {{#unless disableAdvancedDice}}
    <label>{{localize 'WOD5E.HTR.DesperationDice' }}</label>
  {{/unless}}
</div>
<div class="base-dice-group flex-group-center">
  {{#unless disableBasicDice}}
    <div class="basic-dice">
      <div class="dice-input">
        <img width="50" height="50" src="systems/wod5e/assets/icons/dialog/hunter-dice.png"/>
        <div class="flexrow">
          <i class="fas fa-minus dialog-control dialog-minus" data-action="minus" data-resource="inputBasicDice" data-resource-action="minus"></i>
          <input type="number" min="0" id="inputBasicDice" value="{{basicDice}}">
          <i class="fas fa-plus dialog-control dialog-plus" data-action="plus" data-resource="inputBasicDice" data-resource-action="plus"></i>
        </div>
      </div>
    </div>
  {{/unless}}
  {{#unless disableAdvancedDice}}
    <div class="advanced-dice">
      <div class="dice-input">
        <img width="50" height="50" src="systems/wod5e/assets/icons/dialog/desperation-dice.png"/>
        <div class="flexrow">
          <i class="fas fa-minus dialog-control dialog-minus" data-action="minus" data-resource="inputAdvancedDice" data-resource-action="minus"></i>
          <input type="number" min="0" id="inputAdvancedDice" value="{{advancedDice}}">
          <i class="fas fa-plus dialog-control dialog-plus" data-action="plus" data-resource="inputAdvancedDice" data-resource-action="plus"></i>
        </div>
      </div>
    </div>
  {{/unless}}
</div>
{{> "systems/wod5e/display/ui/parts/roll-dialog-base.hbs"}}
