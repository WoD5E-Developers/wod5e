<li class="chat-message message flexcol {{cssClass}}" data-message-id="{{message._id}}" {{#if borderColor}}style="border-color:{{borderColor}}"{{/if}}>
	{{> "systems/wod5e/display/ui/chat/chat-message-header.hbs"}}
	<hr>
	<div class="message-content">
		<div class="wod5e">
			<header class="flexrow flex-group-left" style="align-items: center;">
				{{#if img}}
					<img class="item-image" src="{{ img }}" title="{{ name }}" width="36" alt="{{ name }}"/>
				{{/if}}
				<h3 class="item-name" style="line-height: 18px; font-weight: bold; flex: 4 0 0; text-align: center;">
					{{ name }}
				</h3>
			</header>

			<div class="br-text">
				{{{description}}}
			</div>
		</div>
	</div>
</li>
